<div class="new-container">
  <h1>New game</h1>
  <div class="letters-container">
    <ul class="letters-list">
      <% @letters.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
    </ul>
  </div>
  <div class="form-container">
    <form action="/score" method="post" data-turbo="false">
      <label for="user_entry">What is the longest word you can find?</label>
      <input type="text" name="user_entry" >
      <input type="submit">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :start_time, @start_time %>
    </form>
  </div>
</div>
